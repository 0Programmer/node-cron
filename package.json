  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "expect.js": "^0.3.1",
    "istanbul": "^0.4.2",
    "mocha": "^4.0.1",
    "sinon": "^4.1.2",
    "opencollective-postinstall": "^2.0.0"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/node-cron",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.2.0"
  },
  "dependencies": {
    "tz-offset": "0.0.1"
